	journal = {Ecology Letters},
	author = {Thompson, Patrick L. and Guzman, Laura Melissa and Meester, Luc De and Horváth, Zsófia and Ptacnik, Robert and Vanschoenwinkel, Bram and Viana, Duarte S. and Chase, Jonathan M.},
