	journal = {Ecology},
	author = {Gonzalez, Andrew and Cardinale, Bradley J. and Allington, Ginger R. H. and Byrnes, Jarrett and Endsley, K. Arthur and Brown, Daniel G. and Hooper, David U. and Isbell, Forest and O'Connor, Mary I. and Loreau, Michel},
	year = {2016},
