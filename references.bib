	keywords = {Density regulation, Metapopulation, Stability, Stochastic dispersal, Stochatsic   growth, climate-change, communities, environmental fluctuations, larval dispersal, marine protected areas, patterns, persistence, populations, synchrony, terrestrial},
	pages = {111--127}
}

@article{thompson_loss_2017,
	title = {Loss of habitat and connectivity erodes species diversity, ecosystem functioning, and stability in metacommunity networks},
